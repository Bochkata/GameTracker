@using GameTracker.Data
@using GameTracker.Models.Games.ComputerGameModels
@model ComputerGamesAllViewModel

@{
    ViewBag.Title = "ALL";
}

<div class="text-center row">
    @foreach (var ComputerGame in Model.ComputerGames)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 18rem;"
             src="@ComputerGame.ImageUrl" alt="Computer Game Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@ComputerGame.Name</h5>
                <p class="mb-0">Director: @ComputerGame.Creator</p>
                <p class="mb-0">Rating: @ComputerGame.Rating</p>
                <p>ComputerGameType: @ComputerGame.ComputerGameType</p>
            </div>

            <form class="input-group-sm" asp-route-computerGameId="@ComputerGame.Id" asp-controller="ComputerGames" asp-action="AddToCollection" method="post">
                <input type="submit" value="Add To Favorite" class="fs-6 btn btn-success mb-3 p-2" />
            </form>

            @if (User.IsInRole(DataConstants.RoleContants.Admin))
            {
                    <form class="input-group-sm" asp-route-computerGameId="@ComputerGame.Id" asp-controller="ComputerGames" asp-action="Delete" method="post">
                <input type="submit" value="Delete" class="fs-6 btn btn-danger mb-3 p-2" />
                </form>
       
            }
        </div>
    }
</div>
